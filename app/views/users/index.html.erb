<div class="contentarea">
  <div>
    <h3><strong>Employees</strong></h3>
    <div class="create_new"><%= link_to image_tag('/images/edit.png', :title => "View"), new_user_path %></div>
  </div>
  <div class="clear"></div>
  <div class="content">
    <table class="emp_list">
      <thead>
        <tr>
          <td width="24%">Name</td>
          <td width="24%">Email</td>
          <td width="20%">Phone</td>
          <td width="20%">organization</td>
          <td width="10%">Options</td>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr class="row<%= index % 2 %>">
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.organization %></td>
            <td>&nbsp;&nbsp;<%= link_to image_tag('/images/view.png', :title => "View"), user %> &nbsp;&nbsp;
              <%= link_to image_tag('/images/edit.png', :title => "Edit"), edit_user_path(user) %> &nbsp;&nbsp;
              <%= link_to image_tag('/images/delete.png', :title => "Delete"), user, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div style="padding: 10px"></div>
    <%= will_paginate @users %>
  </div>
</div>

<div class="contentarea">
  <div>
    <h3><strong>Locations</strong></h3>
    <div class="create_new"><%= link_to image_tag('/images/edit.png', :title => "Create"), new_location_path %></div>
  </div>
  <div class="clear"></div>
  <div class="content">
    <table class="emp_list">
      <thead>
        <tr>
          <td width="24%">Name</td>          
          <td width="10%">Options</td>
        </tr>
      </thead>
      <tbody>
        <% @locations.each_with_index do |location, index| %>
          <tr class="row<%= index % 2 %>">
            <td><%= location.name %></td>
            <td>&nbsp;&nbsp; <%= link_to image_tag('/images/edit.png', :title => "Edit"), edit_location_path(location) %> &nbsp;&nbsp;
              <%= link_to image_tag('/images/delete.png', :title => "Delete"), location, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div style="padding: 10px"></div>
    <%= will_paginate @locations %>
  </div>
</div>
